{
  "name": "incident-management",
  "version": "1.0.1",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2.6.0",
    "@sap/cds": "^9.7.1",
    "@sap/xssec": "^4.12.2",
    "express": "^4.22.1"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0.4.1",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "@sap/ux-ui5-tooling": "^1.20.2",
    "@ui5/cli": "^4.0.43",
    "cds-plugin-ui5": "^0.13.0",
    "ui5-task-zipper": "^3.5.1"
  },
  "scripts": {
    "test": "npx jest tests/test.js",
    "start": "cds-serve",
    "watch-incidents": "cds watch --open ns.incidents/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "requires": {
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "alice": {
              "roles": [
                "support"
              ]
            },
            "bob": {
              "roles": [
                "support"
              ]
            }
          }
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "destinations": true,
      "html5-repo": true,
      "workzone": true
    }
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/incidents"
  ]
}
